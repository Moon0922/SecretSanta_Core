@page
@model RegisterModel
@{
	ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>
<div class="d-flex justify-content-center align-items-center">
	<div class="card bg-white w-50">
		<div class="card-body p-5">
			<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
				<h2>Create a new user for the agency account.</h2>
				<hr />
				<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
				<input type="hidden" asp-for="Input.Password" value="@ViewData["Password"]" />
				<input type="hidden" asp-for="Input.ConfirmPassword" value="@ViewData["Password"]" />
				<input type="hidden" asp-for="Input.AgencyId" value="@ViewData["AgencyId"]" />
				<div class="form-floating mb-3">
					<input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
					<label asp-for="Input.Email">Email</label>
					<span asp-validation-for="Input.Email" class="text-danger"></span>
				</div>
				<div class="form-floating mb-3">
					<select asp-for="Input.Role" class="form-select" asp-items="(SelectList)@ViewData["Roles"]">
						<option selected="selected" value="">Select</option>
					</select>
					<label asp-for="Input.Role" class="form-label"></label>
					<span asp-validation-for="Input.Role" class="text-danger"></span>
				</div>
				<button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
			</form>
		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
