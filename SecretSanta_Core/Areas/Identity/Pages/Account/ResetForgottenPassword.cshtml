@page
@model ResetForgottenPasswordModel

<div class="row">
	<div class="col-md-8">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
			<input asp-for="Input.Code" type="hidden" />
			<div class="form-floating mb-3">
				<div class="col-md-2">
					<label asp-for="Input.Email" class="form-label"></label>
				</div>
				<div class="col-md-10">
					<input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
					<span asp-validation-for="Input.Email" class="text-danger"></span>
				</div>
			</div>
			<div class="form-floating mb-3">
				<div class="col-md-2">
					<label asp-for="Input.ConfirmEmail" class="form-label"></label>
				</div>
				<div class="col-md-10">
					<input asp-for="Input.ConfirmEmail" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
					<span asp-validation-for="Input.ConfirmEmail" class="text-danger"></span>
				</div>
			</div>
			<div class="form-floating mb-3">
				<div class="col-md-2">
					<label asp-for="Input.Password" class="col-form-label" autocomplete="new-password" aria-required="true" placeholder="Please enter your password."></label>
				</div>
				<div class="col-md-10">
					<input asp-for="Input.Password" class="form-control" />
					<span asp-validation-for="Input.Password" class="text-danger"></span>
				</div>
			</div>
			<div class="form-floating mb-3">
				<div class="col-md-2">
					<label asp-for="Input.ConfirmPassword" class="col-form-label" autocomplete="confirm-password" aria-required="true" placeholder="Please confirm your password."></label>
				</div>
				<div class="col-md-10">
					<input asp-for="Input.ConfirmPassword" class="form-control" />
					<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
				</div>
			</div>
			<button type="submit" class="w-100 btn btn-lg btn-primary">Submit</button>
		</form>
	</div>
</div>
