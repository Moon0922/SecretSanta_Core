@model SecretSanta_Core.Models.FamilyInfoModel
@{
	ViewData["Title"] = "FamilyInfo";
	Layout = "~/Views/Shared/_LayoutLetter.cshtml";
}

<form id="familyInfo" asp-action="FamilyInfo">
	<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
	<div class="card mb-3">
		<div class="card-header">HOUSEHOLD INFORMATION</div>
		<div class="card-body">
			<div class="row mb-3">
				<p>Please tell us how many people live in the household, by category</p>
			</div>
			<div class="row mb-3">
				<div class="col-md-3"><label asp-for="NumChildrenUnder19" class="col-form-label"></label></div>
				<div class="col-md-9"><input asp-for="NumChildrenUnder19" class="form-control" value="0" /></div>
			</div>
			<div class="row mb-3">
				<div class="col-md-3"><label asp-for="NumChildrenOver19" class="col-form-label"></label></div>
				<div class="col-md-9"><input asp-for="NumChildrenOver19" class="form-control" value="0" /></div>
			</div>
			<div class="row mb-3">
				<div class="col-md-3"><label asp-for="NumParents" class="col-form-label"></label></div>
				<div class="col-md-9"><input asp-for="NumParents" class="form-control" value="0" /></div>
			</div>
			<div class="row mb-3">
				<div class="col-md-3"><label asp-for="NumGrandparents" class="col-form-label"></label></div>
				<div class="col-md-9"><input asp-for="NumGrandparents" class="form-control" value="0" /></div>
			</div>
			<div class="row mb-3">
				<div class="col-md-3"><label asp-for="NumOtherFamily" class="col-form-label"></label></div>
				<div class="col-md-9"><input asp-for="NumOtherFamily" class="form-control" value="0" /></div>
			</div>

			<div class="d-flex justify-content-center align-items-center pt-3">
				<div class="col">
					<button type="button" id="previous" class="btn btn-secondary">Previous</button>
				</div>
				<div class="col">
					<button type="button" id="next" class="btn btn-secondary" style="float:right">Next</button>
				</div>
			</div>
		</div>
	</div>
</form>

@section Scripts {
	<environment names="Development">
		<script src="~/js/familyinfo.js"></script>
	</environment>
	<environment exclude="Development">
		<script src="~/js/familyinfo.min.js"></script>
	</environment>
}