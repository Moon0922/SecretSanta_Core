@model List<SecretSanta_Core.Models.BlobImageModel>
@{
    ViewData["Title"] = "Home Image";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Upload or Select Image</h2>

<div class="container">
    <div id="tabs">
        <ul>
            <li><a href="#tabs-1">Upload Image</a></li>
            <li><a href="#tabs-2">Gallery</a></li>
        </ul>
        <div id="tabs-1">
            <div class="row">
                <div class="col-md-4">
                    <input type="file" id="image" name="image" accept="image/*" />
                </div>
                <div class="col-md-2">
                    <button type="button" id="btnUpload" class="btn btn-primary">Upload</button>
                </div>
            </div>
        </div>
        <div id="tabs-2">
            <div class="row">
                <div class="offset-md-10 col-md-2">
                    <a href="#" id="set" class="btn btn-primary">Set Image</a>
                </div>
            </div>
            <div id="gallery">
                @for (var i = 0; i < Model.Count; i += 6)
                {
                    <div class="row">

                        @for (int j = i; j <= Math.Min(5 + i, Model.Count - 1); j++)
                        {
                            if (j == 0)
                            {
                                <div class="col-md-2">
                                    <div class="member">
                                        <div class="gallery-img" style="background-image: url(@Model[j].BlobImageUri);"></div>
                                        <div>
                                            <input type="checkbox" id="@Model[j].BlobImageName" class="chk" checked="checked" />
                                        </div>

                                    </div>

                                </div>
                            }
                            else
                            {
                                <div class="col-md-2">
                                    <div class="member">
                                        <div class="gallery-img" style="background-image: url(@Model[j].BlobImageUri);"></div>
                                        <div>
                                            <input type="checkbox" id="@Model[j].BlobImageName" class="chk" />
                                        </div>

                                    </div>

                                </div>
                            }
                        }
                    </div>
                }
            </div>

        </div>
    </div>
</div>
@section scripts{
    <environment names="Development">
        <script src="~/js/addimage.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/addimage.min.js"></script>
    </environment>
}





